{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
       "@/*": ["./*"]
    },
  "types": ["node", "express"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}