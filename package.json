  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "@stellar/stellar-sdk": "^13.3.0",
    "@supabase/supabase-js": "^2.50.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "module-alias": "^2.2.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.0",
    "sequelize": "^6.37.7",
    "undici": "^7.10.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.3",
