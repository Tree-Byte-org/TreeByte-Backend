    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.10",
    "supabase": "^2.30.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
